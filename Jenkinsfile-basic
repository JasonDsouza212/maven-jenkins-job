#!/usr/bin/env groovy
def gv
pipeline {
    agent any
    parameters {
        choice(name: "VERSION", choices: ['1.1.0','1.1.1','1.1.2'], description: "")
        booleanParam(name: "exicute", defaultValue: true,description: "checking will it work or not")
    }
    stages {
        stage('init') {
         
            steps {
             script {
                gv = load "script.groovy"
             }
            }
        }
        stage('build') {
            when{
                expression {
                    params.exicute
                }
            }
            steps {
                script {
                    gv.buildApp()
                }
            }
        }
        stage('test') {
            steps {
                script {
                    gv.buildTest
                    echo "justcheching out ${params.VERSION}"
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    gv.buildDeploy
                }
            }
        }
    }
}
