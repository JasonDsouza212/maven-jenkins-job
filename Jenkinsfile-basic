#!/usr/bin/env groovy
def gv
pipeline {
    agent any
    parameters {
        choice(name: "VERSION", choices: ['1.1.0','1.1.1','1.1.2'], description: "")
        booleanParam(name: "exicute", defaultValue: true,description: "checking will it work or not")
    }
    stages {
        stage('init') {
         
            steps {
             script {
                gv = load "script.groovy"
             }
            }
        }
        stage('build') {
            when{
                expression {
                    params.exicute
                }
            }
            steps {
                script {
                    gv.buildApp()
                }
            }
        }
        stage('test') {
            steps {
                script {
                    gv.buildTest()
                    echo "justcheching out ${params.VERSION}"
                }
            }
        }
        stage('deploy') {
            input{
                message "Select the environment to deploy to"
                ok "Done"
                parameters{
                     choice(name: "ENV", choices: ['dev','staging','prod'], description: "")
                     choice(name: "ENV2", choices: ['dev','staging','prod'], description: "")
                } 
            }
            steps {
                script {
                    gv.buildDeploy()
                    echo "Deploying to ${ENV}"
                    echo "Deploying to ${ENV2}"
                }
            }
        }
    }
}
