#!/usr/bin/env groovy

pipeline {
    agent none
    parameters {
    choice(name:"VERSION",choices:['1.1.0','1.1.1','1.1.2'],description:"")
     booleanparam(name:"exicute",defaultvalue:true,description:"checking will it work or not")
    }
    stages {
        stage('build') {
            when{
                expression{
                    prams.exicute
                }
            }
            steps {
                script {
                    echo "Building the application..."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                    echo "justcheching out ${params.VERSION}"
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
